<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackCompose"
        tools:targetApi="31">
        <activity
            android:name=".screens.DashBoardActivity"
            android:exported="false"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/Theme.JetpackCompose" />
        <activity
            android:name=".screens.ForgetPinHelpActivity"
            android:exported="false"
            android:label="@string/title_activity_forget_pin_help"
            android:theme="@style/Theme.JetpackCompose" />
        <activity
            android:name=".screens.SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.JetpackCompose" />
        <activity
            android:name=".screens.TermConditionActivity"
            android:exported="false"
            android:label="@string/title_activity_term_condition"
            android:theme="@style/Theme.JetpackCompose" />
        <activity
            android:name=".screens.VerifyOtpActivity"
            android:exported="false"
            android:label="@string/title_activity_verify_otp"
            android:theme="@style/Theme.JetpackCompose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screens.LandingPageActivity"
            android:exported="false"
            android:label="@string/title_activity_landing_page"
            android:theme="@style/Theme.JetpackCompose" />
        <activity
            android:name=".screens.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.JetpackCompose" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.JetpackCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>